<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:background="@drawable/edit_toggle"
        android:overScrollMode="never"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:id="@+id/btnOk"
                android:src="@drawable/ic_baseline_highlight_off_24"
                >

            </ImageView>

            <com.movocash.movo.utilities.helper.TypeFaceTextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text=""
                android:layout_marginLeft="@dimen/_15sdp"
                android:gravity="center"
                android:layout_marginRight="@dimen/_15sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                app:customFont="bold.ttf" />

            <com.movocash.movo.utilities.helper.TypeFaceTextView
                android:id="@+id/tvMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:gravity="center"
                android:text="@string/dummy"
                android:textColor="@color/black"
                android:textSize="@dimen/_9ssp" />
            <com.movocash.movo.utilities.helper.TypeFaceTextView
                android:id="@+id/tvMessage2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_5sdp"

                android:gravity="center"
                android:text="@string/msg2"
                android:textColor="@color/black"
                android:textSize="@dimen/_9ssp" />

            <com.movocash.movo.utilities.helper.TypeFaceButton
                android:id="@+id/btnOkk"
                android:layout_width="@dimen/_170sdp"
                android:layout_height="@dimen/_32sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/bg_btn"
                android:gravity="center"
                android:visibility="gone"
                android:text="OK"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"
                app:customFont="bold.ttf" />
        </LinearLayout>
    </ScrollView>
</layout>