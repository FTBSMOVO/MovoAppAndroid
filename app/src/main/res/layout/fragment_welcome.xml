<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.movocash.movo.utilities.helper.TypeFaceTextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:ellipsize="marquee"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="LET'S MOVO!"
                    android:textColor="@color/red"
                    android:textSize="@dimen/_33ssp"
                    app:customFont="bold.ttf" />

                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logo12"
                    android:layout_marginTop="20sp"
                    >

                </ImageView>





                <com.movocash.movo.utilities.helper.TypeFaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10sp"
                    android:text="REAL DIGITAL CASH"
                    android:textColor="@color/black"
                    android:visibility="gone"
                    android:textSize="@dimen/_15ssp"
                    app:customFont="bold.ttf" />

                <com.movocash.movo.utilities.helper.TypeFaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:visibility="gone"
                    android:text="Instantly Send &amp; Spend Money"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp" />

                <com.movocash.movo.utilities.helper.TypeFaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Right From Your Phone."
                    android:textColor="@color/black"
                    android:visibility="gone"
                    android:textSize="@dimen/_10ssp" />

                <ImageView
                    android:id="@+id/ivThumb"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_30sdp"

                    android:src="@drawable/fingerpng" />

                <com.movocash.movo.utilities.helper.TypeFaceButton
                    android:id="@+id/btnSignIn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/_37sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginEnd="@dimen/_37sdp"
                    android:background="@color/red"
                    android:gravity="center"
                    android:text="SIGN IN"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp"
                    app:customFont="bold.ttf" />

                <LinearLayout
                    android:id="@+id/llEnrolled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/bg_btn"
                    android:backgroundTint="#E1E1E1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">



                    <com.movocash.movo.utilities.helper.TypeFaceTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New User?"
                        app:customFont="bold.ttf"
                        android:textColor="@color/black"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:textSize="@dimen/_13ssp" />

                    <com.movocash.movo.utilities.helper.TypeFaceTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Join Now"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_16ssp"
                        app:customFont="bold.ttf" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="bottom|center"
                    >

                    <com.movocash.movo.utilities.helper.TypeFaceTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_20ssp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:gravity="center"
                        android:text="@string/welcome"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_8ssp"
                        android:visibility="gone"
                        app:customFont="bold.ttf" />

                    <com.movocash.movo.utilities.helper.TypeFaceTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:gravity="center"
                        android:text="v3.8.0"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_8ssp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        app:customFont="bold.ttf" />
                </LinearLayout>



            </LinearLayout>

        </ScrollView>


    </RelativeLayout>

</layout>